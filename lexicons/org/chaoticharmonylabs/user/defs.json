{
  "$type": "com.atproto.lexicon.schema",
  "lexicon": 1,
  "id": "org.chaoticharmonylabs.user.defs",
  "defs": {
    "preferences": {
      "type": "object",
      "description": "User preferences for the Orbits application.",
      "properties": {
        "theme": {
          "type": "string",
          "enum": ["light", "dark", "auto"],
          "default": "auto",
          "description": "UI theme preference"
        },
        "defaultOrbitView": {
          "type": "string",
          "enum": ["grid", "list", "compact"],
          "default": "grid",
          "description": "Default view mode for orbits"
        },
        "autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh feeds"
        },
        "refreshInterval": {
          "type": "integer",
          "minimum": 30,
          "maximum": 3600,
          "default": 300,
          "description": "Auto-refresh interval in seconds"
        },
        "updatedAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when preferences were last updated."
        }
      }
    }
  }
}
