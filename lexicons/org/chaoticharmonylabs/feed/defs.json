{
  "$type": "com.atproto.lexicon.schema",
  "lexicon": 1,
  "id": "org.chaoticharmonylabs.feed.defs",
  "defs": {
    "feed": {
      "type": "object",
      "description": "A content feed for a specific type (video, photo, text).",
      "required": ["name", "contentType", "createdAt"],
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the feed.",
          "minLength": 1,
          "maxLength": 64
        },
        "description": {
          "type": "string",
          "description": "Optional description of the feed.",
          "maxLength": 256
        },
        "contentType": {
          "type": "string",
          "enum": ["video", "photo", "text"],
          "description": "The type of content this feed contains."
        },
        "isActive": {
          "type": "boolean",
          "default": true,
          "description": "Whether this feed is currently active."
        },
        "createdAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when the feed was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when the feed was last updated."
        }
      }
    }
  }
}
