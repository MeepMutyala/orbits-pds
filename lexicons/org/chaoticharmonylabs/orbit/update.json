{
  "lexicon": 1,
  "id": "org.chaoticharmonylabs.orbit.update",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Update an existing orbit.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["uri"],
          "properties": {
            "uri": {"type": "string", "format": "at-uri"},
            "name": {
              "type": "string",
              "minLength": 1,
              "maxLength": 64
            },
            "description": {
              "type": "string",
              "maxLength": 256
            },
            "feeds": {
              "type": "object",
              "properties": {
                "video": {"type": "string", "format": "at-uri"},
                "photo": {"type": "string", "format": "at-uri"},
                "text": {"type": "string", "format": "at-uri"}
              }
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["uri", "cid"],
          "properties": {
            "uri": {"type": "string", "format": "at-uri"},
            "cid": {"type": "string", "format": "cid"}
          }
        }
      }
    }
  }
}
