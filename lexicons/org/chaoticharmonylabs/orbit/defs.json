{
  "$type": "com.atproto.lexicon.schema",
  "lexicon": 1,
  "id": "org.chaoticharmonylabs.orbit.defs",
  "defs": {
    "orbit": {
      "type": "object",
      "description": "A user-defined semantic orbit (feed collection) for organizing posts.",
      "required": ["name", "createdAt"],
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the orbit (e.g., 'Photography', 'Philosophy').",
          "minLength": 1,
          "maxLength": 64
        },
        "description": {
          "type": "string",
          "description": "Optional description of the orbit.",
          "maxLength": 500
        },
        "color": {
          "type": "string",
          "description": "Hex color like #RRGGBB",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "maxLength": 7
        },
        "isVisible": {
          "type": "boolean",
          "default": true,
          "description": "Whether this orbit is visible in the UI"
        },
        "order": {
          "type": "integer",
          "minimum": 0,
          "description": "Display order of this orbit"
        },
        "feeds": {
          "type": "object",
          "description": "Feed URIs included in this orbit (one per type).",
          "properties": {
            "video": {
              "type": "string", 
              "format": "at-uri",
              "description": "Video feed URI"
            },
            "photo": {
              "type": "string",
              "format": "at-uri", 
              "description": "Photo feed URI"
            },
            "text": {
              "type": "string",
              "format": "at-uri",
              "description": "Text feed URI"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when the orbit was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "datetime",
          "description": "Timestamp when the orbit was last updated."
        }
      }
    }
  }
}
