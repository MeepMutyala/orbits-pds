{
  "lexicon": 1,
  "id": "org.chaoticharmonylabs.orbit.listOrbits",
  "defs": {
    "main": {
      "type": "query",
      "description": "List user's orbits with optional filtering.",
      "parameters": {
        "type": "params",
        "properties": {
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50,
            "description": "Maximum number of orbits to return"
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor"
          },
          "visibleOnly": {
            "type": "boolean",
            "default": false,
            "description": "Only return visible orbits"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["orbits"],
          "properties": {
            "cursor": {
              "type": "string"
            },
            "orbits": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "com.atproto.repo.defs#recordViewBasic"
              }
            }
          }
        }
      }
    }
  }
}